<div class='container'>
  <div class="form-group row">
    <div class="col-12">
      <h3 class="text-center"><%= @user.name %>さんの詳細</h3>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-2 text-center">
      <%= image_tag @user.get_profile_image, size: '150x150' %>
    </div>
    <div class="col-10">
      <h5 class="text-center border-bottom">自己紹介</h5>
      <p><%= @user.information %></p>
    </div>
  </div>
  <div class="form-group row">
    <% if current_user == @user %>
      <div class="col-12">
        <%= link_to edit_user_path(@user), class: "btn btn-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="form-group row">
    <div class="col-12 border-bottom">
      <h4 class="text-center"><%= @user.name %>さんの投稿</h4>
    </div>
  </div>
  <%= render 'public/posts/index',post: @posts %>
</div>