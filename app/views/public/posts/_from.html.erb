<%= form_with model: post do |f| %>
  <div class="form-group">
    <%= f.label "本のタイトル" %><br/>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>
  <div class="form-group">
    <%= f.label "感想" %><br/>
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>

  <div class="form-group row text-center">
    <% if request.fullpath.include?("edit") %>
      <div class="col-3 offset-3 text-center">
        <%= f.submit '更新', class: 'btn btn-success w-75' %>
      </div>
      <div class="col-3 text-center">
        <%= link_to "削除", post_path(@post.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger w-75" %>
      </div>
    <% else %>
      <div class="col-4 offset-4 text-center">
        <%= f.submit '投稿', class: 'btn btn-success w-50' %>
      </div>
    <% end %>
  </div>
<% end %>