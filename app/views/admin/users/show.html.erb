<div class='container'>
  <div class="form-group row">
    <div class="col-12">
      <h3 class="text-center"><%= @user.name %>さんの詳細</h3>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-2">
      <%= image_tag @user.get_profile_image, size: '150x150' %>
    </div>
    <div class="col-10">
      <h5 class="text-center border-bottom">自己紹介</h5>
      <p class="line-break"><%= @user.information %></p>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12">
      <%= link_to edit_admin_user_path(@user), class: "btn btn-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-12 border-bottom">
      <h4 class="text-center"><%= @user.name %>さんの投稿</h4>
    </div>
  </div>
  <%= render 'admin/posts/index',post: @posts %>
</div>