<div class="container">
  <div class="form-group row">
    <div class="col-12 border-bottom bottom-space2">
      <h3 class="text-center">新規ユーザー登録</h3>
    </div>
  </div>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <div class="col-3 offset-2">
        <p>ハンドルネーム</p>
      </div>
      <div class="col-5">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-100" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3 offset-2">
        <p>メールアドレス</p>
      </div>
      <div class="col-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "w-100" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3 offset-2">
        <p>
          <% if @minimum_password_length %>
            パスワード(<%= @minimum_password_length %> 文字以上)
          <% end %>
        </p>
      </div>
      <div class="col-5">
        <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3 offset-2 bottom-space">
        <p>パスワード確認</p>
      </div>
      <div class="col-5 bottom-space">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-4 offset-4">
        <%= f.submit "登録", class: "btn btn-success w-100" %>
      </div>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-2 offset-5">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>