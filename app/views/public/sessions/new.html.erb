<div class="container">
  <div class="form-group row">
    <div class="col-12 border-bottom bottom-space">
      <h3 class="text-center">ログイン</h3>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row">
      <div class="col-3 offset-2">
        <p>メールアドレス</p>
      </div>
      <div class="col-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "w-100" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-3 offset-2">
        <p>パスワード</p>
      </div>
      <div class="col-5">
        <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %><br>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を維持する" %>
        <% end %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-4 offset-4">
        <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
      </div>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-2 offset-5">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>