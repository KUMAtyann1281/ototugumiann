<% if post.present? %>
  <% post.each do |post| %>
    <div class="form-group row border-bottom">
      <div class="col-1 bottom-space2">
        <%= link_to user_path(post.user) do %>
          <%= image_tag post.user.get_profile_image, size: '70x70' %>
          <%= post.user.name %>
        <% end %>
      </div>
      <div class="col-8">
          <h5><%= post.title %></h5>
          <p class="line-break"><%= post.body %></p>
      </div>
      <div class="col-2">
        <p>いいね</p>
        <p>コメント数： <%= post.comments.count %></p>
      </div>
      <div class="col-1">
        <%= link_to "詳細", post_path(post.id), class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="form-group row">
    <div class="col-12">
      <p class="text-center">投稿されていません。</p>
    </div>
  </div>
<% end %>